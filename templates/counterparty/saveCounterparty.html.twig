{% extends 'base.html.twig' %}

{% block title %}{{ title_logo }}{% endblock title %}

{% block logo %}{{title_logo}}{% endblock logo %}

{% block Responsive_behaviors %}
<nav class="navbar navbar-expand-xl bg-dark" data-bs-theme="dark">
  {% endblock Responsive_behaviors %}

  {% block form %}

  {#Форма сохранения поступления деталей#}

  {{ form_start(form_save_counterparty, {'method': 'POST', 'attr': {'class': 'row row-cols-12 text-center
  mt-2'}}) }}

  <div class="col-auto ms-2">
    <div class="lb">{{ form_label(form_save_counterparty.form_save_name_counterparty) }}</div>
    {{ form_widget(form_save_counterparty.form_save_name_counterparty, { 'attr': {'class': 'ps-1'} }) }}
    {{ form_errors(form_save_counterparty.form_save_name_counterparty) }}

  </div>



  <div class="col-auto ms-2">
    <div class="lb">{{ form_label(form_save_counterparty.form_save_mail_counterparty) }}</div>
    {{ form_widget(form_save_counterparty.form_save_mail_counterparty, { 'attr': {'class': 'ps-1'} }) }}
    {{ form_errors(form_save_counterparty.form_save_mail_counterparty) }}
  </div>


  <div class="col-auto ms-2">
    <div class="lb">{{ form_label(form_save_counterparty.form_save_manager_phone) }}</div>
    {{ form_widget(form_save_counterparty.form_save_manager_phone, { 'attr': {'class': 'ps-1', 
    'placeholder': '+79999999999'} }) }}
    {{ form_errors(form_save_counterparty.form_save_manager_phone) }}
  </div>


  <div class="col-auto ms-2">
    <div class="lb">{{ form_label(form_save_counterparty.form_save_delivery_phone) }}</div>
    {{ form_widget(form_save_counterparty.form_save_delivery_phone, { 'attr': {'class': 'ps-1', 
    'placeholder': '+79999999999'} }) }}
    {{ form_errors(form_save_counterparty.form_save_delivery_phone) }}
  </div>

  <div class="row mt-3">
    <div class="col-9 d-grid gap-2 ms-2">
      {{ form_widget(form_save_counterparty.button_save_counterparty, { 'label': 'Сохранить', 'attr': {'class': 'btn
      btn-danger'}}) }}
    </div>
  </div>

  {{ form_end(form_save_counterparty) }}
  <div class="col-auto m-3">
    {% for saving_information in arr_saving_information %}
    {% for information in saving_information %}
    {#{{ dump(saving_information) }}#}
    <h5>{{ information |nl2br }}</h5>
    {% endfor %}
    {% endfor %}
  </div>
  {% endblock form %}
