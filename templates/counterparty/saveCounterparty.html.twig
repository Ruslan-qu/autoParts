{% extends 'base.html.twig' %}

{% block title %}{{ title_logo }}{% endblock title %}

{% block logo %}{{title_logo}}{% endblock logo %}

{% block Responsive_behaviors %}
<nav class="navbar navbar-expand-xl bg-dark" data-bs-theme="dark">
  {% endblock Responsive_behaviors %}

  {% block form_save %}

  {#Форма сохранения поступления деталей#}

  {{ form_start(form_save_counterparty, {'method': 'POST'}) }}

  <div class="col-auto m-3">
    {{ form_label(form_save_counterparty.form_save_name_counterparty) }}
    {{ form_widget(form_save_counterparty.form_save_name_counterparty, { 'attr': {'class': 'ms-2 ps-1'} }) }}
    {{ form_errors(form_save_counterparty.form_save_name_counterparty) }}

  </div>



  <div class="col-auto m-3">
    {{ form_label(form_save_counterparty.form_save_mail_counterparty) }}
    {{ form_widget(form_save_counterparty.form_save_mail_counterparty, { 'attr': {'class': 'ms-5 ps-1'} }) }}
    {{ form_errors(form_save_counterparty.form_save_mail_counterparty) }}
  </div>


  <div class="col-auto m-3">
    {{ form_label(form_save_counterparty.form_save_manager_phone) }}
    {{ form_widget(form_save_counterparty.form_save_manager_phone, { 'attr': {'class': 'ms-1 ps-1', 'placeholder':
    '+79999999999'} }) }}
    {{ form_errors(form_save_counterparty.form_save_manager_phone) }}
  </div>


  <div class="col-auto m-3">
    {{ form_label(form_save_counterparty.form_save_delivery_phone) }}
    {{ form_widget(form_save_counterparty.form_save_delivery_phone, { 'attr': {'class': 'ms-2 ps-1', 'placeholder':
    '+79999999999'} }) }}
    {{ form_errors(form_save_counterparty.form_save_delivery_phone) }}
  </div>

  <div class="col m-3">
    {{ form_widget(form_save_counterparty.button_save_counterparty, { 'label': 'Сохранить', 'attr': {'class': 'scb btn
    btn-danger'}}) }}
  </div>


  {{ form_end(form_save_counterparty) }}
  <div class="col-auto m-3">
    {% for saving_information in arr_saving_information %}
    {% for information in saving_information %}
    {#{{ dump(saving_information) }}#}
    <h5>{{ information |nl2br }}</h5>
    {% endfor %}
    {% endfor %}
  </div>
  {% endblock form_save %}