{% extends 'base.html.twig' %}

{% block title %}{{ title_logo }}{% endblock title %}

{% block logo %}{{title_logo}}{% endblock logo %}

{% block Responsive_behaviors %}
<nav class="navbar navbar-expand-xl bg-dark" data-bs-theme="dark">
  {% endblock Responsive_behaviors %}

  {% block form %}

  {#Переменный для вывода данных в форме #}

  {% if data_form_edit_participant is iterable %}
  {% set email_find_id = data_form_edit_participant.email|default('') %}
  {% set roles_find_id = data_form_edit_participant.roles|default('') %}
  {% set isVerified_find_id = data_form_edit_participant.isVerified|default('') %}
  {% set id_find_id = data_form_edit_participant.id|default('') %}
  {% else %}
  {% set email_find_id = data_form_edit_participant.getEmail()|default('') %}
  {% set roles_find_id = data_form_edit_participant.getRoles()|default('') %}
  {% set isVerified_find_id = data_form_edit_participant.isVerified()|default('') %}
  {% set id_find_id = data_form_edit_participant.getId()|default('') %}
  {% endif %}

  {#Форма редактирования поступления деталей#}

  {{ form_start(form_edit_participant) }}
  <div class="container-fluid text-center mt-3">
    <div class="row">

      <div class="col-sm-3 col-md-3 col-lg-2">
        <div class="lb">{{ form_label(form_edit_participant.email) }}</div>
        {{ form_widget(form_edit_participant.email, { value : email_find_id,
        'attr': {'class': 'w-100'} }) }}
        {{ form_errors(form_edit_participant.email) |nl2br }}
        {% for message in app.flashes('[email_error][Regex]') %}
        {{ message }}
        {% endfor %}
      </div>

      <div class="col-sm-3 col-md-3 col-lg-2">
        <div class="lb">{{ form_label(form_edit_participant.roles) }}</div>
        {{ form_widget(form_edit_participant.roles, { value : roles_find_id,
        'attr': {'class': 'w-100'} }) }}
        {{ form_errors(form_edit_participant.roles) |nl2br }}
      </div>

      <div class="col-sm-3 col-md-3 col-lg-2">
        <div class="lb">{{ form_label(form_edit_participant.isVerified) }}</div>
        {{ form_widget(form_edit_participant.isVerified, { value : isVerified_find_id,
        'attr': {'class': 'w-100'} }) }}
        {{ form_errors(form_edit_participant.isVerified) |nl2br }}
      </div>
    </div>
  </div>

  {{ form_widget(form_edit_participant.id, {value : id_find_id}) }}

  <div class="row my-2 pt-2">
    <div class="col-sm-12 col-lg-8">
      {{ form_widget(form_edit_participant.button_participant, 
      { 'attr': {'class': 'btn btn-secondary w-100'}}) }}
    </div>
  </div>

  {{ form_end(form_edit_participant) }}

  {% for messages in app.flashes(['delete','Error']) %}
  {% for message in messages %}
    <h2 class="mt-3 ms-3">{{ message }}</h2>
  {% endfor %}
  {% endfor %}

  <div class="m-3">
    {% if id_handler %}
    <h5>Данные поставщика изменены </h5>
    {% endif %}
  </div>
  {% endblock form %}