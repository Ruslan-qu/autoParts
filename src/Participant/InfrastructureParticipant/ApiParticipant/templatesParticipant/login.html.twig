{% extends 'base.html.twig' %}

{% block title %}{{ title_logo }}{% endblock title %}

{% block logo %}{{title_logo}}{% endblock logo %}

{% block Responsive_behaviors %}
<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
    {% endblock Responsive_behaviors %}

    {% block form %}
    <form method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
        <div class="mb-3">
            Вы вошли в систему как {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
        {% endif %}
        <div class="container-fluid text-center mt-3">
            <div class="row">
                <div class="col-sm-5 col-md-4 col-lg-3 col-xl-2">
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
                        autocomplete="email" required autofocus>
                </div>
                <div class="col-sm-5 col-md-4 col-lg-3 col-xl-2">

                    <label for="password">Password</label>
                    <div class="input-group">
                        <input type="password" name="_password" id="password" class="form-control rounded"
                            autocomplete="current-password" required>
                        <button id="toggle-password" type="button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="22" fill="currentColor"
                                class="bi bi-eye" viewBox="0 0 16 16">
                                <path
                                    d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z" />
                                <path
                                    d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0" />
                            </svg>
                        </button>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </div>

            {#Uncomment this section and add a remember_me option below your firewall to activate remember me
            functionality.
            See https://symfony.com/doc/current/security/remember_me.html#}
            <div class="row my-2 pt-2">
                <div class="col-auto">
                    <div class="checkbox">
                        <input type="checkbox" name="_remember_me" id="_remember_me">
                        <label for="_remember_me">Запомнить меня</label>
                    </div>
                </div>
            </div>
            <div class="row my-2 pt-2">
                <div class="col-sm-10 col-md-8 col-lg-6 col-xl-4">
                    <button class="btn btn-primary w-100" type="submit">
                        Вход
                    </button>
                </div>
            </div>
        </div>
    </form>
    {% endblock form %}