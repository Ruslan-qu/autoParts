{% extends 'base.html.twig' %}

{% block title %}{{ title_logo }}{% endblock title %}

{% block logo %}{{title_logo}}{% endblock logo %}

{% block Responsive_behaviors %}
<nav class="navbar navbar-expand-xl bg-dark" data-bs-theme="dark">
  {% endblock Responsive_behaviors %}

  {% block form %}

  {#Форма сохранения стороны#}

  {{ form_start(form_save_auto_parts_email) }}

  <div class="container-fluid text-center mt-3">

    <div class="row mt-3">
      <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
        {{ form_widget(form_save_auto_parts_email.button_save_email, { 'attr': {'class': 'btn btn-danger w-100'}}) }}
        {% for message in app.flashes('[part_number_error][Regex]') %}
        {{ message }}
        {% endfor %}

        {% for message in app.flashes('[name_counterparty_error][Regex]') %}
        {{ message }}
        {% endfor %}

        {% for message in app.flashes('[method_error][Regex]') %}
        {{ message }}
        {% endfor %}
      </div>
    </div>

  </div>

  {{ form_end(form_save_auto_parts_email) }}

  {#Таблица автодеталей из Email#}
  <div class="col-auto m-3">
    {% if saved %}
    <h5>Поставка сохранена</h5>
    {% endif %}
  </div>
  <div class="col-auto m-3">
    {% for message in app.flashes('Error') %}
    <h5>{{ message }}</h5>
    {% endfor %}
  </div>
  {% endblock form %}

  {% block table %}
  {% if not table_counterparty %}
  <div class="col-auto m-3">
    <h5>Поставок нет</h5>
  </div>
  {% endif %}
  {#Таблица автодеталей#}
  <div class="container-fluid text-center">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped-columns table-sm align-middle 
        border-info shadow p-3 mb-5 bg-body-tertiary rounded caption-top">
        {% if table_counterparty %}
        <caption>Список поставщиков от которых поступили детали</caption>
        <thead class="table-secondary">
          <tr>
            <th scope="col">Поставщик</th>
            <th scope="col">E-mail</th>
            <th scope="col">Телефон менеджера</th>
            <th scope="col">Телефон доставки</th>
          </tr>
        </thead>
        {% endif %}
        <tbody class="table-group-divider">
          {% for information in table_counterparty %}
          {% if information %}
          <tr>
            <td>{{ information.getNameCounterparty() }}</td>
            <td>{{ information.getMailCounterparty() }}</td>
            <td>{{ information.getManagerPhone() }}</td>
            <td>{{ information.getDeliveryPhone() }}</td>
          </tr>
          {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  {% endblock table %}