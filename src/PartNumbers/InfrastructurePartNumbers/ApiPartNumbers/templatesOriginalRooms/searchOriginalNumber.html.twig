{% extends 'base.html.twig' %}

{% block title %}{{ title_logo }}{% endblock title %}

{% block logo %}{{title_logo}}{% endblock logo %}

{% block Responsive_behaviors %}
<nav class="navbar navbar-expand-xl bg-dark" data-bs-theme="dark">
  {% endblock Responsive_behaviors %}

  {% block form %}

  {#Форма сохранения номеров деталей#}

  {{ form_start(form_search_original_rooms) }}

  <div class="container-fluid text-center mt-3">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
        <div class="lb">{{ form_label(form_search_original_rooms.original_number) }}</div>
        {{ form_widget(form_search_original_rooms.original_number, { 'attr': {'class': 'w-100'} }) }}
        {{ form_errors(form_search_original_rooms.original_number) }}
        {% for message in app.flashes('[original_number_error][Regex]') %}
        {{ message }}
        {% endfor %}
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
        {{ form_widget(form_search_original_rooms.button_original_number, { 'attr': {'class': 'btn btn-primary w-100'}})
        }}
      </div>
    </div>

  </div>

  {{ form_end(form_search_original_rooms) }}

  {% for messages in app.flashes(['delete','Error']) %}
  {% for message in messages %}
  <h2 class="mt-3 ms-3">{{ message }}</h2>
  {% endfor %}
  {% endfor %}

  {% endblock form %}


  {% block table %}

  {#Таблица автодеталей#}

  <div class="container-fluid text-center pt-4 ">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-striped-columns table-sm align-middle 
        border-info shadow p-3 mb-5 bg-body-tertiary rounded">
        <thead class="table-secondary">

          {% if search_data %}
          <tr>
            <th scope="col">№ детали</th>
            <th scope="col">Замена</th>
            <th scope="col">Производитель</th>
            <th scope="col">Редактировать</th>
            <th scope="col">Удалить</th>
          </tr>
          {% endif %}

        </thead>
        <tbody class="table-group-divider">
          {% for information in search_data %}
          {% if information %}

          <tr>
            {% if information.getOriginalNumber() is defined %}
            <td>{{ information.getOriginalNumber() }}</td>
            {% set id = information.getId() %}
            {% elseif information.getIdOriginalNumber().getOriginalNumber() is defined %}
            <td>{{ information.getIdOriginalNumber().getOriginalNumber() }}</td>
            {% set id = information.getIdOriginalNumber().getId() %}
            {% endif %}
            <td>{{ information.getReplacingOriginalNumber()|default('') }}</td>
            {% if information.getOriginalManufacturer() is defined %}
            <td>{{ information.getOriginalManufacturer() }}</td>
            {% elseif information.getIdOriginalNumber().getOriginalManufacturer() is defined %}
            <td>{{ information.getIdOriginalNumber().getOriginalManufacturer() }}</td>
            {% endif %}
            <form action="{{ path('edit_original_number') }}" name="edit_original_number">

              <td><button class="btn btn-outline-secondary" type="submit" name="id" value="{{ id }}">Изменить</button>
              </td>

            </form>
            <form action="{{ path('delete_original_number') }}" name="delete_original_number">

              <td><button class="btn btn-outline-danger" type="submit" name="id" value="{{ id }}">Удалить</button></td>

            </form>
          </tr>
          {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  {% endblock table %}