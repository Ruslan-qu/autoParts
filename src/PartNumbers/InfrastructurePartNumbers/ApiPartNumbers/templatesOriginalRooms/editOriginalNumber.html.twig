{% extends 'base.html.twig' %}

{% block title %}{{ title_logo }}{% endblock title %}

{% block logo %}{{title_logo}}{% endblock logo %}

{% block Responsive_behaviors %}
<nav class="navbar navbar-expand-xl bg-dark" data-bs-theme="dark">
  {% endblock Responsive_behaviors %}

  {% block form %}

  {#Переменный для вывода данных в форме #}

  {% if data_form_edit_original_rooms is iterable %}
  {% set original_number_find_id = data_form_edit_original_rooms.original_number|default('') %}
  {% set original_manufacturer_find_id = data_form_edit_original_rooms.original_manufacturer|default('') %}
  {% set id_find_id = data_form_edit_original_rooms.id|default('') %}
  {% else %}
  {% set original_number_find_id = data_form_edit_original_rooms.getOriginalNumber()|default('') %}
  {% set original_manufacturer_find_id = data_form_edit_original_rooms.getOriginalManufacturer()|default('') %}
  {% set id_find_id = data_form_edit_original_rooms.getId()|default('') %}
  {% endif %}

  {#Форма изменения номеров деталей#}

  {{ form_start(form_edit_original_rooms) }}
  <div class="container-fluid text-center mt-3">
    <div class="row">

      <div class="col-md-9 col-lg-6 col-xl-6 col-xxl-6">
        <div class="row">

          <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="lb">{{ form_label(form_edit_original_rooms.original_number) }}</div>
            {{ form_widget(form_edit_original_rooms.original_number,
            { value : original_number_find_id, 'attr': {'class': 'w-100'} }) }}
            {{ form_errors(form_edit_original_rooms.original_number) |nl2br }}
            {% for message in app.flashes('[original_number_error][Regex]') %}
            {{ message }}
            {% endfor %}
          </div>

          <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="lb">{{ form_label(form_edit_original_rooms.original_manufacturer) }}</div>
            {{ form_widget(form_edit_original_rooms.original_manufacturer,
            { value : original_manufacturer_find_id, 'attr': {'class': 'w-100'} }) }}
            {{ form_errors(form_edit_original_rooms.original_manufacturer) |nl2br }}
            {% for message in app.flashes('[original_manufacturer_error][Regex]') %}
            {{ message }}
            {% endfor %}
          </div>

        </div>
      </div>

    </div>

    {{ form_widget(form_edit_original_rooms.id, {value : id_find_id}) }}

    <div class="row mt-3">
      <div class="col-sm-12 col-md-6 col-lg-4 d-grid gap-2">
        {{ form_widget(form_edit_original_rooms.button_original_number, { 'attr': {'class': 'btn btn-secondary w-100'}}) }}
      </div>
    </div>

  </div>

  {{ form_end(form_edit_original_rooms) }}

  <div class="col-auto m-3">
    {% for message in app.flashes('Error') %}
    <h5 class="mt-3 ms-3">{{ message }}</h5>
    {% endfor %}

    {% if id %}
    <h5>Данные деталей изменены</h5>
    {% endif %}
  </div>
  {% endblock form %}