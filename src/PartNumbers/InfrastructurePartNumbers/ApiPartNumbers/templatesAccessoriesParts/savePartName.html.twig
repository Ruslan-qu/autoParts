{% extends 'base.html.twig' %}

{% block title %}{{ title_logo }}{% endblock title %}

{% block logo %}{{title_logo}}{% endblock logo %}

{% block Responsive_behaviors %}
<nav class="navbar navbar-expand-lg bg-dark" data-bs-theme="dark">
  {% endblock Responsive_behaviors %}

  {% block form %}

  {#Форма поиска постовщиков#}

  {{ form_start(form_save_part_name, {'attr': {'class': 'row row-cols-12 text-center
  mt-2'}}) }}

  <div class="col-auto ms-3">
    <div class="lb">{{ form_label(form_save_part_name.part_name) }}</div>
    {{ form_widget(form_save_part_name.part_name) }}
    {{ form_errors(form_save_part_name.part_name) }}
  </div>

  <div class="row mt-3">
    <div class="col-auto">
      {{ form_widget(form_save_part_name.button_part_name, { 'attr': {'class': 'btn btn-danger'}}) }}
    </div>
  </div>

  {{ form_end(form_save_part_name) }}

  <div class="col-auto m-3">
    {% for message in app.flashes('Error') %}
    <h5 class="mt-3 ms-3">{{ message }}</h5>
    {% endfor %}

    {% if id %}
    <h5>Данные деталей удачно сохранены</h5>
    {% endif %}
  </div>
  {% endblock form %}
