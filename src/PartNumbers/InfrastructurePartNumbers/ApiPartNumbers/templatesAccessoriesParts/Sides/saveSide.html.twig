{% extends 'base.html.twig' %}

{% block title %}{{ title_logo }}{% endblock title %}

{% block logo %}{{title_logo}}{% endblock logo %}

{% block Responsive_behaviors %}
<nav class="navbar navbar-expand-xl bg-dark" data-bs-theme="dark">
  {% endblock Responsive_behaviors %}

  {% block form %}

  {#Форма сохранения стороны#}

  {{ form_start(form_save_sides) }}

  <div class="container-fluid text-center mt-3">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
        <div class="lb">{{ form_label(form_save_sides.side) }}</div>
        {{ form_widget(form_save_sides.side, { 'attr': {'class': 'w-100'} }) }}
        {{ form_errors(form_save_sides.side) }}
        {% for message in app.flashes('[side_error][Regex]') %}
        {{ message }}
        {% endfor %}
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
        {{ form_widget(form_save_sides.button_side, { 'attr': {'class': 'btn btn-danger w-100'}}) }}
      </div>
    </div>

  </div>

  {{ form_end(form_save_sides) }}

  <div class="col-auto m-3">
    {% for message in app.flashes('Error') %}
    <h5 class="mt-3 ms-3">{{ message }}</h5>
    {% endfor %}

    {% if id %}
    <h5>Данные деталей удачно сохранены</h5>
    {% endif %}
  </div>
  {% endblock form %}