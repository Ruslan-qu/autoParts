{% extends 'base.html.twig' %}

{% block title %}{{ title_logo }}{% endblock title %}

{% block logo %}{{title_logo}}{% endblock logo %}

{% block Responsive_behaviors %}
<nav class="navbar navbar-expand-xl bg-dark" data-bs-theme="dark">
  {% endblock Responsive_behaviors %}

  {% block form %}

  {#Переменный для вывода данных в форме #}

{% if data_form_edit_bodies is iterable %}
  {% set body_find_id = data_form_edit_bodies.body|default('') %}
  {% set id_find_id = data_form_edit_bodies.id|default('') %}
{% else %}
  {% set body_find_id = data_form_edit_bodies.getBody()|default('') %}
  {% set id_find_id = data_form_edit_bodies.getId()|default('') %}
{% endif %}

  {#Форма изменения стороны #}

  {{ form_start(form_edit_bodies) }}

  <div class="container-fluid text-center mt-3">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
        <div class="lb">{{ form_label(form_edit_bodies.body) }}</div>
        {{ form_widget(form_edit_bodies.body, { value : body_find_id, 'attr': {'class': 'w-100'} }) }}
        {{ form_errors(form_edit_bodies.body) }}
        {% for message in app.flashes('[body_error][Regex]') %}
        {{ message }}
        {% endfor %}
      </div>
    </div>

    {{ form_widget(form_edit_bodies.id, {value : id_find_id}) }}

    <div class="row mt-3">
      <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2">
        {{ form_widget(form_edit_bodies.button_body, { 'attr': {'class': 'btn btn-secondary w-100'}}) }}
      </div>
    </div>

  </div>

  {{ form_end(form_edit_bodies) }}

  <div class="col-auto m-3">
    {% for message in app.flashes('Error') %}
    <h5 class="mt-3 ms-3">{{ message }}</h5>
    {% endfor %}

    {% if id %}
    <h5>Кузов удачно изменен</h5>
    {% endif %}
  </div>
  {% endblock form %}