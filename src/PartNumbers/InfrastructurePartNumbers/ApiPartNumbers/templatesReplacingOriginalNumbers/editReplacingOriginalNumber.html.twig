{% extends 'base.html.twig' %}

{% block title %}{{ title_logo }}{% endblock title %}

{% block logo %}{{title_logo}}{% endblock logo %}

{% block Responsive_behaviors %}
<nav class="navbar navbar-expand-xl bg-dark" data-bs-theme="dark">
  {% endblock Responsive_behaviors %}

  {% block form %}

  {#Переменный для вывода данных в форме #}

  {% if data_form_edit_replacing_original_numbers is iterable %}
  {% set replacing_original_number_find_id = 
  data_form_edit_replacing_original_numbers.replacing_original_number|default('') %}
  {% set id_find_id = data_form_edit_replacing_original_numbers.id|default('') %}
  {% else %}
  {% set replacing_original_number_find_id = 
  data_form_edit_replacing_original_numbers.getReplacingOriginalNumber()|default('') %}
  {% set id_find_id = data_form_edit_replacing_original_numbers.getId()|default('') %}
  {% endif %}

  {#Форма изменения номеров деталей#}

  {{ form_start(form_edit_replacing_original_numbers) }}
  <div class="container-fluid text-center mt-3">
    <div class="row">

      <div class="col-md-9 col-lg-6 col-xl-6 col-xxl-6">
        <div class="row">

          <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="lb">{{ form_label(form_edit_replacing_original_numbers.replacing_original_number) }}</div>
            {{ form_widget(form_edit_replacing_original_numbers.replacing_original_number,
            { value : replacing_original_number_find_id, 'attr': {'class': 'w-100'} }) }}
            {{ form_errors(form_edit_replacing_original_numbers.replacing_original_number) |nl2br }}
            {% for message in app.flashes('[replacing_original_number_error][Regex]') %}
            {{ message }}
            {% endfor %}
          </div>

        </div>
      </div>

    </div>

    {{ form_widget(form_edit_replacing_original_numbers.id, {value : id_find_id}) }}

    <div class="row mt-3">
      <div class="col-sm-12 col-md-3 col-lg-2 d-grid gap-2">
        {{ form_widget(form_edit_replacing_original_numbers.button_replacing_original_number, 
        { 'attr': {'class': 'btn btn-danger w-100'}}) }}
      </div>
    </div>

  </div>

  {{ form_end(form_edit_replacing_original_numbers) }}

  <div class="col-auto m-3">
    {% for message in app.flashes('Error') %}
    <h5 class="mt-3 ms-3">{{ message }}</h5>
    {% endfor %}

    {% if id %}
    <h5>Данные деталей изменены</h5>
    {% endif %}
  </div>
  {% endblock form %}